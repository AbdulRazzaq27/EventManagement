<% layout("/layouts/boilerplate")-%>
    <style>

    </style>

    <body>
        <div class="card-container">
            <div class="event-header">Upcoming Events</div>
            <% for(event of allEvents) { %>
                <div class="card roboto-mono-webfont">
                    <div class="card-body">
                        <h5 class="card-title">
                            <b>
                                <%= event.name %>
                            </b>
                        </h5>
                        <div class="description">
                            <h6 class="card-subtitle mb-2 text-secondary">
                                <%= event.description %>
                            </h6>
                        </div>
                        <div style="display: flex; align-items: center;">
                            <div class="date">
                                <% let eventDate=new Date(event.date); %>
                                    <% let day=eventDate.getDate(); %>
                                        <% let month=eventDate.toLocaleString('default', { month: 'short' }); %>
                                            <div class="day">
                                                <%= day %>
                                            </div>
                                            <div class="month">
                                                <%= month %>
                                            </div>
                            </div>
                            <div>
                                <p class="card-text">
                                    <b>Organized By: <%= event.organizer %></b>
                                </p>
                                <p class="card-text">
                                    Timings: <%= event.time %>
                                </p>
                            </div>
                        </div>
                        <div class="links">
                            <a href="#" class="card-link">Register</a>
                            <a href="#" class="card-link">Details</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </body>